@page
@model AbbyRazor.Pages.Categories.IndexModel
@{
}

<div class="container p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List	</h2>
		</div>
		<div class="col-6">
			<a asp-page="/Categories/Create" class="btn btn-primary">Create New Category</a>
		</div>
	</div>
	<table class="table table-striped table-bordered" style="100%">
		<thead>
			<tr><th>
				Category Name
			</th>
			<th>Display Order</th></tr>

		</thead>
		<tbody>
			@foreach(var item in Model.Categories)
			{
				<tr>
				<td width="50%">
					@item.Name
				</td>
				<td>
					@item.DisplayOrder
				</td>
				</tr>
			}
			
		</tbody>

	</table>
</div>
